<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">
    <%= @post.title %>
    <br/>
    <%= @post.author %>
  </div>
  <div class="panel-body">
    <%= @post.blog_entry %>
  </div>
  <div class="panel-footer">
    <%= link_to 'Edit', edit_post_path(@post),{class:'btn btn-warning post-button'} %>
    <%= link_to 'Destroy', post_path(@post),{class:'btn btn-danger post-button'} %>
    <%= link_to 'Back', posts_path, {class:'btn btn-primary post-button'}%>

  </div>
</div>

<div>
<br/>
  <%= render "comments/form", comment: Comment.new %>
</div>

<% @post.comments.each do |comment| %>
<div class="well">
  <%= comment.author %> says:
  <br/>
  <p>
  <%= comment.comment_entry %>
  </p>
</div>
<% end %>
